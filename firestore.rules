
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read vehicle data
    match /vehicles/{vehicleId} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to read and write their own session data
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow authenticated users to read diagnostic data
    match /diagnostics/{code} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to read and write their own telemetry data
    match /telemetry/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
