rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Vehicle configurations are public, but only admins can modify them
    match /vehicle_configs/{make} {
        allow read: if true;
        allow write: if request.auth.token.role == 'admin';
    }

    // Users can read/write their own vehicle's data
    match /vehicles/{vehicleId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
    
    // Diagnostic data linked to a vehicle
    match /diagnostics/{diagId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        // Only allow owner of linked vehicle to view/update
        allow update: if request.auth != null && get(/databases/$(database)/documents/vehicles/$(resource.data.vehicleId)).data.ownerId == request.auth.uid;
    }
    
    // Immutable maintenance and tuning records logged via Hedera
    match /hederaRecords/{recordId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if false; // Immutable
    }
    
    // Allow users to create feedback
    match /feedback/{feedbackId} {
        allow create: if request.auth != null;
        allow read: if request.auth.token.role == 'admin'; // Admins can read feedback
    }
  }
}